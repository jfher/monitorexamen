<center><h1><b> Listing thermostats</b></h1></center>


  <table class="table table-striped "><thead>
      <tr class="info">
        <th>Serial</th>
        <th>Temperature</th>
        <th>Humidity</th>
        <th>Energy</th>
        <th>Model</th>
        
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @thermostats.each do |thermostat| %>
        <tr>
           <% if current_user.nil? ==false %>
          <% if current_user.id == thermostat.user_id  && @location.id == thermostat.location_id%>
          <% @modname = Modelo.find_by(id: thermostat.modelo_id.to_i)%>
          <%if thermostat.history_thermostats.last != nil%>
             <td><%= thermostat.serial %></td>
             <td><%= thermostat.history_thermostats.last.temperature %></td>
             <td><%= thermostat.history_thermostats.last.humidity%></td>
             <td><%= thermostat.history_thermostats.last.energy %></td>
             <td><%= @modname.name%></td>
          <%else%>
             <td><%= thermostat.serial %></td>
             <td><%= thermostat.temperature %></td>
             <td><%= thermostat.humidity%></td>
             <td><%= thermostat.energy %></td>
             <td><%= @modname.name%></td>
             <td></td>
          <%end%>
          <td><a href="/thermostats/<%= thermostat.id %>" class="btn btn-default">Show</a></td>
          <td><a href="<%= edit_thermostat_path(thermostat) %>" class="btn btn-default">Edit</a></td>
          <td><a href="/thermostats/destroy/<%= thermostat.id %>" class="btn btn-danger">Delete</a></td>
          <td><a href="/schedules/index/<%= thermostat.id %>" class="btn btn-success">Schedule</a></td>
          <td><a href="<%= report_history_path(thermostat.id) %> " class="btn btn-primary "> Show History Thermostat</a></td>
          <td><a href="/issues/new/<%= thermostat.id %>" class="btn btn-warning">Report Problem</a></td>
          <td><a href="/issues/show/<%= thermostat.id %>"class="btn btn-info">Show Problems</a></td>
          <td><a href="/thermostats/graphic/<%= thermostat.id %>" title="view graphig" class="btn btn-primary">View Graphig</a></td>
          <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
